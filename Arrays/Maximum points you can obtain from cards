class Solution {
    public int maxScore(int[] cardPoints, int k) {
       int sum = 0 ;
        for(int i = 0; i<k;i++){
            sum = sum + cardPoints[i];
        }
       int  maxSum = sum;
       int rightindex = cardPoints.length-1;

       for(int i = k-1;i>=0;i--){
            sum = sum - cardPoints[i] + cardPoints[rightindex];
            maxSum = Math.max(sum,maxSum);
            rightindex--;
       }
       return maxSum;
    }
}
